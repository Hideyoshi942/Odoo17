<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_expense_tree" model="ir.ui.view">
    <field name="name">expense.tree</field>
    <field name="model">expense</field>
    <field name="arch" type="xml">
      <tree string="Expense">
        <field name="reference"/>
        <field name="image" widget="image" class="oe_avatar"/>
        <field name="name"/>
        <field name="currency_id"/>
        <field name="price"/>
        <field name="date"/>
      </tree>
    </field>

  </record>

  <record id="view_expense_form" model="ir.ui.view">
    <field name="name">expense.form</field>
    <field name="model">expense</field>
    <field name="arch" type="xml">
      <form string="Expense">
        <field name="image" widget="image" class="oe_avatar"/>
        <div class="oe_title">
          <label for="name"></label>
          <h1>
            <field name="name"></field>
          </h1>
        </div>
        <sheet>
          <group>
            <group>
              <field name="reference"/>
              <field name="currency_id"/>
              <field name="price"/>
              <field name="date"/>
            </group>
            <group>
              <field name="quantity"/>
              <field name="category"/>
            </group>
          </group>
          <notebook>
            <page string="Description">
              <field name="description"/>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" groups="base.group_user"/>
          <field name="message_ids"/>
        </div>
      </form>
    </field>
  </record>

  <record id="expense_action" model="ir.actions.act_window">
    <field name="name">Expense</field>
    <field name="res_model">expense</field>
    <field name="view_mode">tree,form</field>
    <!--    Liên kết đến views liên quan và quản lý thứ tự hiển thị-->
    <field name="view_ids" eval="[Command.clear(),
      (0,0,{'view_mode': 'tree', 'view_id': ref('view_expense_tree')}),
      (0,0,{'view_mode': 'form', 'view_id': ref('view_expense_form')})]"/>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a new expense
      </p>
    </field>
  </record>

  <menuitem id="expense_menu" name="Expenses" groups="base.group_user"/>
  <menuitem id="expense_menu_1" name="List Expense" parent="expense_menu" action="expense_action"
    groups="base.group_user"/>

</odoo>