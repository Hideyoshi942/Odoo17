<odoo>
  <record id="view_expense_approval_wizard" model="ir.ui.view">
    <field name="name">expense.approval.wizard.form</field>
    <field name="model">expense.approval.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="state" widget="radio"/>
          </group>
          <div>
            <label for="state">Are you sure you want to Approve/Reject?</label>
          </div>
          <footer>
            <button string="Apply" type="object" name="action_apply" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
          </footer>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
